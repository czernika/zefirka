{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "^type-check"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "package.json",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.mjs",
        "package.json",
      ],
      "outputs": []
    },
    "type-check": {
      "dependsOn": [
        "^type-check"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "package.json",
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
